<!DOCTYPE html>
<html>
<head>
  <title>Mobile Buoys</title>
	
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= javascript_include_tag "application" %>
	<%= stylesheet_link_tag "application", media: "all" %>
</head>
<body>
<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="#">Mobile Buoys</a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

    
  <section class="top-bar-section">
    
    <ul class="right">
      <li class="active"><a href="#"><%= @profile.name %></a></li>
              
      <li class="has-dropdown not-click">
        <a href="#">Profiles</a>
        <ul class="dropdown">
          <% @profiles.to_a.each_with_index do |profile, idx| %>
            <li 
            <% if profile == @profile %>
              class='active'
            <% end %>
            ><%= link_to profile.name, controller: 'main', action: 'profile', id: profile.id %>
						</li>
          <% end %>   
          	 <%= react_component("NavLink", 
									{name: "New Profile", 
									url: "/main/new_profile/" + @active_region.id.to_s,
									update_id: "remote-form"
									}, 
									{prerender: true, tag: "li"}) %>
        </ul>
      </li>
    
      <li class="has-dropdown not-click">
        <a href="#">Regions</a>
        <ul class="dropdown">
          <% @regions.each do |region| %>
            <li 
            <% if region == @active_region %>
              class='active'
            <% end %>
						>
              <%= link_to region.name, controller: 'main', action: 'get_region', id: region.id %></li>
          <% end %>  
        </ul>
      </li>
    </ul>

    <!-- Left Nav Section -->
		
    <ul class="left">
      <li><a href="#"><%= @active_region.name %></a></li>
    </ul>
		
		<ul class="left">
	  	<li><a id="administration" href="#">Administration</a></li>
	  </ul>
		
  </section>
</nav>  

  <%= yield %>
 
</body>

</html>
